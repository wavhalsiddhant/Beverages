<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buy Feni</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-0 pb-0">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img src="/images/peace.jpeg" alt="logo" width="40" height="40" class="d-inline-block align-text-top rounded">
            Coconut & Cashew Feni
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <% if (user) { %>
                    <li class="nav-item m-2">
                        <span class="nav-link text-light"><strong> Welcome, <%= user.name %></strong></span>
                    </li>
                    <li class="nav-item m-2">
                        <a class="btn btn-outline-light me-2" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item m-2">
                        <form action="/logout" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/signup">Signup</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
    <!-- Back Button -->
<div class="container my-3">
    <button class="btn btn-secondary" onclick="history.back()">Back</button>
</div>

<div class="container my-5">
    <h1 class="text-center mb-4">Buy Your Feni</h1>
    <div class="row">
        <% products.forEach(product => { %>
            <div class="col-md-6 mb-4">
                <div class="card bg-light text-dark shadow-sm">
                    <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p class="lead">Price: â‚¹<%= product.price %></p>
                        <a href="checkout?type=<%= product.category %>" class="btn btn-warning">Buy <%= product.name %></a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="text-center my-4">
        <a href="details" class="btn btn-success btn-lg">Back to Details</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
