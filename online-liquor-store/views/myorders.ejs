<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-0 pb-0">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img src="/images/peace.jpeg" alt="logo" width="40" height="40" class="d-inline-block align-text-top rounded">
            Coconut & Cashew Feni
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <% if (user) { %>
                    <li class="nav-item m-2">
                        <span class="nav-link text-light"><strong> Welcome, <%= user.name %></strong></span>
                    </li>
                    <li class="nav-item m-2">
                        <a class="btn btn-outline-light me-2" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item m-2">
                        <form action="/logout" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="/signup">Sign Up</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
    <!-- Back Button -->
<div class="container my-3">
    <button class="btn btn-secondary" onclick="history.back()">Back</button>
</div>


<div class="container my-5">
    <h1 class="text-center mb-4">My Orders</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="orderTableBody">
            <% if (orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.id %></td>
                        <td><%= order.total_amount %></td>
                        <td><%= order.status %></td>
                        <td>
                            <a href="/order/<%= order.id %>" class="btn btn-info">View Details</a>
                            <a href="/order/delete/<%= order.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No orders found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <div class="text-center my-4">
        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
